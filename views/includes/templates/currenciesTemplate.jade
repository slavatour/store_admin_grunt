script(type="text/template" id="currencyModelTemplate")
    td <%= currency_country %>
    td <%= currency_literal_code %>
    td <%= currency_numeric_code %>
    td.text-center <%= currency_value %>
    td.text-center 0
    td.text-center <%= currency_last_update %>
    td
        a.btn.btn-default.btn-xs.dropdown-toggle.pull-right(title="edit" data-toggle="dropdown")
            i.fa.fa-gears
        ul.dropdown-menu(role="menu")
            li
                a(href="#") 
                    i.fa.fa-wrench   
                    |edit
            li
                a(href="#") 
                    i.fa.fa-times
                    | delete

script(type="text/template" id="currenciesCollectionTemplate")
    div.panel-heading
        strong Currencies list
    div.panel-body
        table.table.table-condensed.table-hover
            thead
                tr.text-muted
                    th.text-center(colspan="3") Currency
                    th.text-center Value
                    th.text-center Difference
                    th.text-center Last update
                    th
                        a.btn.btn-default.btn-xs.pull-right add 
            tbody.currencyModelsContainer


