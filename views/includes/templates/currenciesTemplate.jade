script(type="text/template" id="currenciesHistoryCollectionTemplate")
    div.panel-heading
        strong Currencies history
    div.panel-body
        table.table.table-condensed.table-hover
            thead
                tr.text-muted
                    th.text-center Currency
                    th.text-center Date
                    th.text-center Value
                    th.text-center Difference
                tr.text-muted
                    th
                        select.form-control.input-sm.col-xs-2
                            option USD
                            option EUR
                            option UAH
                    th(colspan="3")
                        div.input-group.input-group-sm.pull-right.col-xs-4
                            input.form-control.hasDatePicker#andDate(tepe="text" value="31.01.2014")
                            label.input-group-addon(for="andDate")
                                i.fa.fa-calendar.fa-lg
                        div.input-group.input-group-sm.pull-right.col-xs-4
                            input.form-control.hasDatePicker#startDate(tepe="text" value="01.01.2014")
                            label.input-group-addon(for="startDate")
                                i.fa.fa-calendar.fa-lg
            tbody.currencyHistoryModelsContainer

script(type="text/template" id="modalAddCurrency")
        div.modal-dialog.modal-lg
            div.modal-content
                div.modal-header
                    button(type="button" class="close" data-dismiss="modal" aria-hidden="true")
                        | &times;
                    h4.modal-title#myModalLabel Add new currency:
                div.modal-body
                    div.alertContainer
                    form(role="form")
                        div.form-group
                            label(for="countryCurrency") Country:
                            input#countryCurrency.form-control.tooltipHas(type="text" name="currency_country" pattern="^[A-Za-z]+$" required data-toggle="tooltip" title="This input has to be literal only" data-placement="top" data-container=".modal-body" data-trigger="hover focus")
                            p.help-block Example: United States of America
                        div.form-group
                            label(for="literalCodeCurrency") Code ISO 4217:
                            input#literalCodeCurrency.form-control.tooltipHas(type="text" name="currency_iso_code" pattern="^[A-Z]+$" required data-toggle="tooltip" title="This input has to contain capital letters only (according to ISO 4217)" data-placement="top" data-container=".modal-body" data-trigger="hover focus")
                            p.help-block Example: USD
                        div.form-group
                            label(for="literalCodeNumberCurrency") Code number ISO 4217:
                            input#literalCodeNumberCurrency.form-control.tooltipHas(type="text" name="currency_iso_number_code" pattern="[0-9]{3}" required data-toggle="tooltip" title="This input has to contain number only (according to ISO 4217)" data-placement="top" data-container=".modal-body" data-trigger="hover focus")
                            p.help-block Example: 840
                        div.form-group
                            label(for="numericCodeCurrency") Currency HTML code:
                            input#numericCodeCurrency.form-control(type="text" name="currency_numeric_code" pattern="&[A-Za-z0-9]*;" required)
                            p.help-block Example: &amp;#36; for $
                        div.form-group
                            label(for="valueCurrency") Currency value:
                            input#valueCurrency.form-control.tooltipHas(type="text" name="currency_value" pattern="[0-9]*([,.][0-9]*)" required data-toggle="tooltip" title="This input has to be literal only" data-placement="top" data-container=".modal-body" data-trigger="hover focus")
                            p.help-block In relation to the base currency
                        button.btn.btn-default.saveNewCurrency(type="submit") Submit