script(type="text/template" id="currenciesHistoryCollectionTemplate")
    div.panel-heading
        strong Currencies history
    div.panel-body
        table.table.table-condensed.table-hover
            thead
                tr.text-muted
                    th.text-center Currency
                    th.text-center Date
                    th.text-center Value
                    th.text-center Difference
                tr.text-muted
                    th
                        select.form-control.input-sm.col-xs-2
                            option USD
                            option EUR
                            option UAH
                    th(colspan="3")
                        div.input-group.input-group-sm.pull-right.col-xs-4
                            input.form-control.hasDatePicker#andDate(tepe="text" value="31.01.2014")
                            label.input-group-addon(for="andDate")
                                i.fa.fa-calendar.fa-lg
                        div.input-group.input-group-sm.pull-right.col-xs-4
                            input.form-control.hasDatePicker#startDate(tepe="text" value="01.01.2014")
                            label.input-group-addon(for="startDate")
                                i.fa.fa-calendar.fa-lg
            tbody.currencyHistoryModelsContainer