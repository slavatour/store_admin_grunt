script(type="text/template" id="specificationsModelView")
    a.specificationName
        i.fa.fa-caret-right
        | <%= specification_name %>
    div.btn-group.pull-right.serviceBtns.tooltipHas(
        data-toggle="tooltip"
        title="Add new named group for specifications, united by common attributes or unnamed group, if you don't want grouping attributes"
        data-placement="top"
        data-container="body"
        data-id!="<%= specification_id %>")
        a.btn.btn-default.btn-xs.addNewSpecificationGroup(data-toggle="modal" data-target="#specificationsModal") +add new group
        a.btn.btn-default.btn-xs.dropdown-toggle(data-toggle="dropdown")
            i.fa.fa-gears
        ul.dropdown-menu(role="menu")
            li.editSpecification
                a
                    i.fa.fa-wrench
                    |edit
            li.divider
            li.deleteSpecification
                a
                    i.fa.fa-times
                    | delete
    <%if(specifications && specifications.length){%>
    <%= renderSpecificationsTre() %>
    <%};%>


