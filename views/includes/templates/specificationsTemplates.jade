script(type="text/template" id="specificationsModalTemplate")
    div.modal-dialog.modal-lg
        div.modal-content
            div.modal-header
                button(type="button" class="close" data-dismiss="modal" aria-hidden="true")
                    | &times;
                h4.modal-title#myModalLabel Add new:
            div.modal-body
                div.alertContainer
                form.form-horizontal(role="form")
                    div.form-group
                        label.col-sm-4(for="specificationName") Specification name:
                        div.col-sm-8.controls
                            input#specificationName.form-control.input-sm(type="text" name="specification_name" required)
                            p.help-block.text-muted
                                small
                                    i.fa.fa-asterisk
                                    |  required
                    div.form-group
                        label.col-sm-4(for="specificationDescription") Description:
                        div.col-sm-8.controls
                            textarea#specificationDescription.form-control.input-sm(name="specification_description")
                            p.help-block.text-muted
                                small
                                    i.fa.fa-asterisk
                                    |  required
                    div.form-group
                        div.col-sm-2.col-sm-offset-10
                            button.btn.btn-default.btn-sm.saveSpecificationGroup(type="submit") Submit

