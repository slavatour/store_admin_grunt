script(type="text/template" id="categoriesCollectionTemplate")
    div.panel.panel-default
        div.panel-heading.categoriesPanelHeader
            h4.categoriesPanelTitle Categories list.
            button.addNewCategory.btn.btn-default.btn-xs.pull-right(data-toggle="modal" data-target="#categoryModal") + add new
        div.panel-body.categoriesContainerView

script(type="text/template" id="categoriesModelTemplate")
    table.table.table-condensed.table-hover
                thead
                    tr.level(class!="level<%= level %>")
                        //- th.categorySortableBtn
                        th.categoryName
                            a.collapseChildren
                                i.fa.fa-plus-square-o
                                | <%= category_name %>
                        th.categoryBtns.col-md-2
                            div.btn-group.pull-right
                                a.btn.btn-default.btn-sm +add new
                                a.btn.btn-default.btn-sm.dropdown-toggle(data-toggle="dropdown") 
                                    i.fa.fa-gears.fa-lg
                                ul.dropdown-menu(role="menu")
                                    li
                                        a(href="#") 
                                            i.fa.fa-wrench   
                                            |edit
                                    li
                                        a(href="#") 
                                            i.fa.fa-exchange
                                            | replace
                                    li
                                        a(href="#") 
                                            i.fa.fa-warning
                                            | smth else
                                    li.divider
                                    li
                                        a(href="#") 
                                            i.fa.fa-times
                                            | delete
                tbody
                    <%= renderCategoriesTre() %>    
